<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@mipmap/img_min_banner"
        >

        <com.unicom.autoship.ui.RatioImageView
            android:id="@+id/rimg_banner"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_version"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="版本1.0"
            android:textColor="#fefefe"
            android:visibility="gone"
            android:textSize="15sp"/>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E1E1E1" />

            <RelativeLayout
                android:id="@+id/rl_my_mall"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/my_rl_selector">

                <ImageView
                    android:id="@+id/iv_my_mall"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19dp"
                    android:background="@mipmap/img_my_mall" />

                <TextView
                    android:id="@+id/tv_my_mall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_my_mall"
                    android:text="我的商城"
                    android:textColor="@color/titleColor" />

                <ImageView
                    android:layout_width="7.5dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/wo_more_icon" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E1E1E1" />

            <RelativeLayout
                android:id="@+id/rl01"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/my_rl_selector">

                <ImageView
                    android:id="@+id/iv_tag01"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19dp"
                    android:background="@mipmap/me_mima_icon" />

                <TextView
                    android:id="@+id/tv01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_tag01"
                    android:text="修改密码"
                    android:textColor="@color/titleColor" />

                <ImageView
                    android:id="@+id/iv_arrow01"
                    android:layout_width="7.5dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/wo_more_icon" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E1E1E1"
                android:visibility="gone"
                />

            <RelativeLayout
                android:id="@+id/rl02"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/my_rl_selector"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/iv_tag02"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19dp"
                    android:background="@mipmap/me_fankui_icon" />

                <TextView
                    android:id="@+id/tv02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_tag02"
                    android:text="用户反馈"
                    android:textColor="@color/titleColor" />

                <ImageView
                    android:id="@+id/iv_arrow02"
                    android:layout_width="7.5dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/wo_more_icon" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E1E1E1" />

            <RelativeLayout
                android:id="@+id/rl03"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/my_rl_selector">

                <ImageView
                    android:id="@+id/iv_tag03"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19dp"
                    android:background="@mipmap/me_taocan_icon" />

                <TextView
                    android:id="@+id/tv03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_tag03"
                    android:text="基础套餐"
                    android:textColor="@color/titleColor" />

                <ImageView
                    android:id="@+id/iv_arrow03"
                    android:layout_width="7.5dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/wo_more_icon" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E1E1E1" />

            <RelativeLayout
                android:id="@+id/rl04"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/my_rl_selector">

                <ImageView
                    android:id="@+id/iv_tag04"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19dp"
                    android:background="@mipmap/wo_update" />

                <TextView
                    android:id="@+id/tv04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_tag04"
                    android:text="版本检测"
                    android:textColor="@color/titleColor" />

                <ImageView
                    android:id="@+id/iv_arrow04"
                    android:layout_width="7.5dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/wo_more_icon" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E1E1E1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#E1E1E1" />

                    <RelativeLayout
                        android:id="@+id/rl_quit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/my_rl_selector">

                        <TextView
                            android:id="@+id/tv_quit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="退出登录"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#E1E1E1" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>